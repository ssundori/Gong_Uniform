<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">


    <TextView
        android:id="@+id/text_pay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결제가 완료되었습니다!"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_temp_qr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QR코드 보기" />

    <Button
        android:id="@+id/button_temp_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="공유니폼 자판기 위치 보러가기" />

    <Button
        android:id="@+id/button_temp_mypage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주문내역 확인하러 가기" />

    <TextView
        android:id="@+id/text_temp_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주문내역이 담긴 QR코드가 생성되었습니다.\n자판기에서 QR코드를 인식시키면 주문한 유니폼을 대여할 수 있습니다." />

    <ImageView
        android:id="@+id/imageview_QR"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>