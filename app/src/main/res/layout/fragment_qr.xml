    <View
        android:background="#142D52"
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_marginTop="10dp"/>

    <!-- 주문내역 글씨 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="QR CODE"
        android:textColor="#142D52"
        android:textSize="23dp"
        android:layout_marginTop="10dp">
    </TextView>

    <!-- QR 박스1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#DFE4EB"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/button_qr_QR1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/qr"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:padding="8dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp">

            <!-- 주문 정보 글씨 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="주문 정보 : \n김재환, 밀리터리, M size"
                android:textSize="18dp"
                android:layout_marginBottom="8dp"
                >

            </TextView>

            <!-- 대여 시작 시각 글씨 -->
            <TextView
                android:id="@+id/txt_date_qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="대여 시작 시각 : \n2024년 4월 19일 15시 32분"
                android:textSize="18dp"
                >

            </TextView>


        </LinearLayout>
    </LinearLayout>

