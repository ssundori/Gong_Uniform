<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@mipmap/logo">
        </ImageView>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <View
            android:background="#142D52"
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="선수선택"
                android:textColor="#142D52"
                android:textSize="23sp" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="유니폼"
                android:textColor="#142D52"
                android:textSize="23sp" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="사이즈"
                android:textColor="#142D52"
                android:textSize="23sp" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="결제"
                android:textColor="#142D52"
                android:textSize="23sp" />
        </LinearLayout>

        <View
            android:background="#142D52"
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/txt_selectedPlayerRR"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="미선택"
                android:textColor="#142D52"
                android:textSize="20sp" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="#142D52"
                android:textSize="20sp" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="#142D52"
                android:textSize="20sp" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="#142D52"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:background="#142D52"
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="3dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF">
                <TextView
                    android:id="@+id/suggestPlayerText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="오늘의 추천선수"
                    android:textColor="#142D52"
                    android:textAlignment="center"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#DFE4EB"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/suggestPlayerView1"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:background="#FFFFFF"
                        android:src="@drawable/kimjaehwan" />
                    <ImageView
                        android:id="@+id/suggestPlayerView2"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:background="#FFFFFF"
                        android:src="@drawable/jungsubin" />
                    <ImageView
                        android:id="@+id/suggestPlayerView3"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:background="#FFFFFF"
                        android:src="@drawable/leeyoochan" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/selectPlayerText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="선수 선택"
                        android:textColor="#142D52"
                        android:textAlignment="center"
                        android:textSize="25dp" />

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <LinearLayout
                            android:id="@+id/imageContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="130dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:background="#DFE4EB">

                            <ImageButton
                                android:id="@+id/Button_selectGackbin"
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="35dp"
                                android:gravity="center"
                                android:scaleType="centerCrop"
                                android:background="#FFFFFF"
                                android:src="@drawable/gackbin" />
                            <ImageButton
                                android:id="@+id/Button_selectKimjaehwan"
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="35dp"
                                android:gravity="center"
                                android:scaleType="centerCrop"
                                android:background="#FFFFFF"
                                android:src="@drawable/kimjaehwan" />
                            <ImageButton
                                android:id="@+id/Button_selectKimtaekyeon"
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="35dp"
                                android:gravity="center"
                                android:scaleType="centerCrop"
                                android:background="#FFFFFF"
                                android:src="@drawable/kimtaekyeon" />
                            <ImageButton
                                android:id="@+id/Button_selectParkchikook"
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="35dp"
                                android:gravity="center"
                                android:scaleType="centerCrop"
                                android:background="#FFFFFF"
                                android:src="@drawable/parkchikook" />
                            <!-- Add more ImageView elements for additional players -->
                        </LinearLayout>
                    </HorizontalScrollView>

                    <!--<FrameLayout
                        android:id="@+id/fragment_rent_uniform_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />-->


                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

            <Button
                android:id="@+id/rtoru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다음"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp" />
        </RelativeLayout>

        <View
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
</LinearLayout>
