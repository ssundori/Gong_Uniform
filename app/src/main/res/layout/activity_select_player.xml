<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom|center_vertical"
    android:orientation="vertical"
    tools:context=".activity_select_player">

    <?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <!--sd-->

        <TextView
            android:id="@+id/suggestPlayerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="오늘의 추천선수"
            android:textAlignment="center"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="#886750a4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/suggestPlayerView1"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:src="@drawable/player1"
                />

            <ImageView
                android:id="@+id/suggestPlayerView2"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/player1"/>

            <ImageView
                android:id="@+id/suggestPlayerView3"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:src="@drawable/player1"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="70dp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selectPlayerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="선수 선택"
                android:textAlignment="center"
                android:textSize="25dp" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/imageContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="190dp"
                    android:orientation="horizontal"
                    android:background="#886750a4">

                    <ImageView
                        android:id="@+id/selectPlayerView1"
                        android:layout_width="90dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:gravity="center"
                        android:src="@drawable/player1" />

                    <ImageView
                        android:id="@+id/selectPlayerView2"
                        android:layout_width="90dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/player1" />

                    <ImageView
                        android:id="@+id/selectPlayerView3"
                        android:layout_width="90dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="40dp"
                        android:gravity="center"
                        android:src="@drawable/player1" />

                    <ImageView
                        android:id="@+id/selectPlayerView4"
                        android:layout_width="90dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="40dp"
                        android:gravity="center"
                        android:src="@drawable/player1" />

                    <!-- Add more ImageView elements for additional players -->
                </LinearLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="65dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:text="다음" />
        </LinearLayout>
    </LinearLayout>




</LinearLayout>