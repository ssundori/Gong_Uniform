<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#ced4da">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="선수선택"
            android:textSize="20sp">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="유니폼"
            android:textSize="20sp">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="사이즈"
            android:textSize="20sp">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="결제"
            android:textSize="20sp">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:background="#ced4da"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/txt_selectedPlayerRU"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="김재환"
            android:textSize="18sp">

        </TextView>
        <TextView
            android:id="@+id/txt_selectedUniform"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="미선택"
            android:textSize="18sp">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="18sp">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="18sp">

        </TextView>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유니폼 종류 선택"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <GridLayout
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="center"
        android:alignmentMode="alignMargins"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:padding="40dp">

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1">

            <ImageButton
                android:id="@+id/Button_uniformHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:padding="2dp"
                android:src="@drawable/uniforma" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1">

            <ImageButton
                android:id="@+id/Button_uniformAway"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/uniformaway"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:padding="2dp"
                android:layout_gravity="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1">

            <ImageButton
                android:id="@+id/Button_uniformMilitary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:scaleType="fitCenter"
                android:padding="2dp"
                android:layout_gravity="center"
                android:src="@drawable/uniformm"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1">

            <ImageButton
                android:id="@+id/Button_uniformOldhome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:padding="2dp"
                android:src="@drawable/uniformo"
                />

        </RelativeLayout>
    </GridLayout>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/rstoru"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="이전"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/rutors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="다음"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:layout_margin="10dp"/>
    </LinearLayout>



</LinearLayout>