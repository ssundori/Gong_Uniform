<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:padding="16dp"
    android:orientation="vertical">
    <!--sd-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <!--sd-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#ced4da">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="선수선택"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="유니폼"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="사이즈"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="결제"
                android:textSize="20sp">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:background="#ced4da"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="미선택"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textSize="18sp">

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textSize="18sp">

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textSize="18sp">

            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/suggestPlayerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="오늘의 추천선수"
            android:textAlignment="center"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="#886750a4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/suggestPlayerView1"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:gravity="center"
                android:src="@drawable/player"
                />

            <ImageView
                android:id="@+id/suggestPlayerView2"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/player"/>

            <ImageView
                android:id="@+id/suggestPlayerView3"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:gravity="center"
                android:src="@drawable/player"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selectPlayerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="선수 선택"
                android:textAlignment="center"
                android:textSize="25dp" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/imageContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="#886750a4">

                    <ImageView
                        android:id="@+id/selectPlayerView1"
                        android:layout_width="90dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="25dp"
                        android:gravity="center"
                        android:src="@drawable/player" />

                    <ImageView
                        android:id="@+id/selectPlayerView2"
                        android:layout_width="90dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/player" />

                    <ImageView
                        android:id="@+id/selectPlayerView3"
                        android:layout_width="90dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center"
                        android:src="@drawable/player" />

                    <ImageView
                        android:id="@+id/selectPlayerView4"
                        android:layout_width="90dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center"
                        android:src="@drawable/player" />

                    <!-- Add more ImageView elements for additional players -->
                </LinearLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/rtoru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다음"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
