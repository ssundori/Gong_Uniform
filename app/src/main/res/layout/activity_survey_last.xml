<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- 팀 선택 글씨 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="공유니폼 설문조사"
            android:textSize="25dp"
            android:textColor="#6750a4"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            >

        </TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:background="@drawable/border"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:id="@+id/layout_question5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_question5"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:padding="5dp"
                    android:paddingStart="10dp"
                    android:text="5. 가장 중요하게 생각하는 요소를\n최대 3개 선택해주세요."
                    android:textColor="#FFFFFF"
                    android:textSize="23dp"
                    android:background="#142D52" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_marginTop="10dp">
                    <RadioButton
                        android:id="@+id/q5_rb1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="홈런, 장타"
                        android:textSize="13dp"/>
                    <RadioButton
                        android:id="@+id/q5_rb2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="안타수"
                        android:textSize="13dp"/>
                </LinearLayout>

                <!-- 두 번째 줄 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_marginTop="10dp">
                    <RadioButton
                        android:id="@+id/q5_rb3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="도루, 발이 빠름"
                        android:textSize="13dp"/>
                    <RadioButton
                        android:id="@+id/q5_rb4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="볼, 스트라이크 판단력"
                        android:textSize="13dp"/>
                </LinearLayout>

                <!-- 세 번째 줄 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_marginTop="10dp">
                    <RadioButton
                        android:id="@+id/q5_rb5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="수비력"
                        android:textSize="13dp"/>
                    <RadioButton
                        android:id="@+id/q5_rb6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="전술적인 이해력, 게임을 이해하는 능력"
                        android:textSize="13dp"/>
                </LinearLayout>

                <!-- 네 번째 줄 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_marginTop="10dp">
                    <RadioButton
                        android:id="@+id/q5_rb7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="리더십"
                        android:textSize="13dp"/>
                    <RadioButton
                        android:id="@+id/q5_rb8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="결정적인 순간에 활약하는 능력"
                        android:textSize="13dp"/>
                </LinearLayout>

                <!-- 다섯 번째 줄 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_marginTop="10dp">
                    <RadioButton
                        android:id="@+id/q5_rb9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="다양한 포지션을 소화하는 능력"
                        android:textSize="13dp"/>
                    <RadioButton
                        android:id="@+id/q5_rb10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="꾸준히 우수한 실력"
                        android:textSize="13dp"/>
                </LinearLayout>

                <!-- 여섯 번째 줄 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_marginTop="10dp">
                    <RadioButton
                        android:id="@+id/q5_rb11"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="실력 외적인 매력"
                        android:textSize="13dp"/>
                    <RadioButton
                        android:id="@+id/q5_rb12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="잠재력"
                        android:textSize="13dp"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <!-- Sign in 버튼 -->
            <android.widget.Button
                android:id="@+id/gobacklogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="SUBMIT"
                android:textColor="#FFFFFF"
                android:background="@drawable/bin_btn_login"
                android:layout_marginTop="60px">

            </android.widget.Button>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>